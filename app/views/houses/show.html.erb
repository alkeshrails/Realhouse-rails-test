<%- model_class = House -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @house.owner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @house.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rooms) %>:</strong></dt>
  <dd><%= @house.rooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sqmt) %>:</strong></dt>
  <dd><%= @house.sqmt %></dd>
  <dt><strong><%= model_class.human_attribute_name(:floors) %>:</strong></dt>
  <dd><%= @house.floors %></dd>
  <dt><strong><%= model_class.human_attribute_name(:air_cond) %>:</strong></dt>
  <dd><%= @house.air_cond %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @house.price %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              houses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_house_path(@house), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              house_path(@house),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
