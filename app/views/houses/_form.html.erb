<%= form_for @house, :html => { :class => "form-horizontal house" } do |f| %>

  <% if @house.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @house.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :owner, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :owner, :class => 'form-control' %>
    </div>
    <%=f.error_span(:owner) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :rooms, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rooms, :class => 'form-control' %>
    </div>
    <%=f.error_span(:rooms) %>
  </div>
  <div class="form-group">
    <%= f.label :sqmt, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sqmt, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sqmt) %>
  </div>
  <div class="form-group">
    <%= f.label :floors, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :floors, :class => 'form-control' %>
    </div>
    <%=f.error_span(:floors) %>
  </div>
  <div class="form-group">
    <%= f.label :air_cond, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :air_cond, :class => 'form-control' %>
    </div>
    <%=f.error_span(:air_cond) %>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price) %>
  </div>

  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                houses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
